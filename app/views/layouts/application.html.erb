<!DOCTYPE html>
<html class="has-navbar-fixed-top">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= favicon_link_tag 'favicon_pkg/apple-touch-icon.png', {:rel => 'apple-touch-icon', :sizes => '120x120', :type => 'image/png'} %>
  <%= favicon_link_tag 'favicon_pkg/favicon.ico', {:rel => 'icon', :sizes => '48x48', :type => 'image/png'} %>
  <title><%= page_title %></title>
  <%= stylesheet_bundle_tag 'style', media: 'all' %>
  <script defer src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"></script>
  <%= csrf_meta_tags %>
  <%= analytics_init if Rails.env.production? %>
</head>
<body>
<%= render 'layouts/header' %>
<!-- section start -->
<section class="section">
  <div class="container">
    <div class="columns">
      <div class="column is-9">
        <%= render 'layouts/flash' %>
        <%= yield %>
      </div>
      <div class="column">
        <%= render 'layouts/side' %>
      </div>
    </div>
  </div>
</section>
<!-- section end -->
<%= render 'layouts/footer' %>
<%= javascript_bundle_tag 'app' %>
<%= javascript_bundle_tag 'style' %>
</body>
</html>
